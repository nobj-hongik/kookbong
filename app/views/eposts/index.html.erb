<section>
    <div class="epostbanner" id="ban2">
        <div class="center-btn"> 
              <%= image_tag("gstitle.png", :class => "img-fluid imgsizer2") %>
        </div> 
           <!-- 여기 바꿔서 'editer'만 버튼나오도록 바꿔야됨 -->
         <% if user_signed_in? %> 
              <%if current_user.id==1 || current_user.id==2 || current_user.id==3 || current_user.id==4 %>
                <div class="center-btn">
                    <%= link_to new_epost_path, :class=>"" do %>
                    <%= image_tag("btnobo.png", :class => "button1") %>
                    <% end %>
                </div> 
              <%end%>
          <%end%>

    </div> 
    
<div class="container">
    <br>        
    <div class="row rowup">
        <div class="card-deck">
            <% @posts.each do |post| %>
                        <div class="res col-12 col-md-4 d-flex justify-content-center" style="margin-bottom:20px">
                            <%= link_to epost_path(post.id), :class=>"hoverer" do %> 
                                    <div class="card card-inverse">
                                                 <img class="card-img img-fluid" src="<%= post.thumb.url %>" alt="Card image">
                                        <div class="card-footer">
                                          <span class="text-muted" style="margin-bottom:0px; margin-top:5px;"><%=post.title%></span>
                                         <p class="text-muted" style="font-size:12px; margin-top:5px; margin-bottom:0px">Written by <%=post.user.name%></p>
                                        </div>
                                    </div>
                            <%end%>              
                        </div> 
            <% end %>
        </div>    
    </div> 
    
    <%= will_paginate @posts, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
    <br>
</div>
</section>
