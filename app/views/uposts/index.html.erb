<section>
    <div class="ban2" id="ban2">
        <div class="center-btn"> 
              <%= image_tag("gbtalk2.png", :class => "img-fluid imgsizer2") %>
        </div> 
        <div class="center-btn">        
                 <%= link_to new_upost_path, :class=>"" do %>
                     <%= image_tag("btnobo.png", :class => "button1") %>
                 <% end %>     
        </div>         
    </div> 
    
<div class="container">
            <br>
    <div class="row">
            <% @posts.each do |post| %>
                        <div class="col-12 col-md-4 d-flex justify-content-center" style="margin-bottom:16px">
                            <%= link_to upost_path(post.id), :class=>"hoverer" do %> 
                                    <div class="card">
                                        <%if post.image.url %>
                                             <img class="card-img img-fluid croper" src="<%= post.image.url %>" alt="Card image">
                                         <%elsif post.user.id%3==0%>
                                              <%= image_tag("gbtalkph.png", :class => "img-fluid card-img") %>  
                                         <%elsif post.user.id%3==1%>
                                              <%= image_tag("gbtalkph2.png", :class => "img-fluid card-img") %>  
                                         <%elsif post.user.id%3==2%>
                                              <%= image_tag("gbtalkph3.png", :class => "img-fluid card-img") %>                                                
                                         <%end%>
                                         <div class="card-block">
                                         <p class="titletext text-left" id="titletext"><%=post.title.truncate(22)%></p>
                                         <p class="subtext text-left" id="subtext">Written by <%=post.user.name%></p>
                                        </div>
                                    </div>
                            <%end%>              
                        </div> 
            <% end %>
    </div>             
    
    <%= will_paginate @posts, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
    <br>
</div>
</section>
